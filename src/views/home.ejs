<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="./css/styel.css">
</head>
<style>
    .title h1:hover {
        color: #04AA6D;
        font-weight: 700;
    }

    table {
      border-collapse: collapse;
      width: 100%;
    }
    
    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    
    tr:hover {background-color: #ccc;}

</style>

<body>
    <div class="topnav">
        <a class="active" href="/"><i class="mr-2 fa-solid fa-house"></i>Home</a>
        <a href="/create"><i class="mr-2 fa-solid fa-square-plus"></i>Create Employee</a>
    </div>
    <div class="table-container">
        <!-- <%= JSON.stringify(listUsers) %> -->
        <div class="title">
            <h1 style="text-align: center">Công ty TNHH VGGATE</h1>
            <h4><i class="mr-2 fa-solid fa-table-list" style="color: blue"></i>Danh sách nhân viên</h4>
            <h6 class="font-italic font-weight-lighter">(Cập nhật tháng 5/2024)</h6>
        </div>
        <table>
            <tr>
              <th>ID</th>
              <th>Họ và tên</th>
              <th>Vị trí</th>
              <th>Ngày vào</th>
              <th>Ngày ra</th>
            </tr>

            <% listUsers.forEach((user) => { %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.position %></td>
                <td><%= user.dayin %></td>
                <td><%= user.dayout %></td>
                <td class="d-flex">
                  <a class="btn btn-warning mr-2" href="/update/<%= user.id %>">Edit</a>
                  <form action="/delete-user/<%= user.id %>" method="POST">
                    <button class="btn btn-danger">Delete</button>
                  </form>
                </td>
              </tr>
            <% }); %>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>   
</body>
</html>

